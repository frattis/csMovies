<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div class="titulo">
            csMovies
        </div>
        <div class="menuTodo">
            <a href="@Url.Content("~/Arquivos")" class="menuItem">Arquivos </a>
            <a href="@Url.Content("~/Releases")" class="menuItem">Releases </a>
            <a href="@Url.Content("~/Filmes")" class="menuItem">Filmes </a>
            <a href="@Url.Content("~/Configuracoes")" class="menuItem">Configurações </a>
        </div>
        <div class="corpo">
            @RenderBody()
        </div>
    </body>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"> </script>
    <script type="text/javascript">
        $().ready(function() {
            $('.menuItem').mouseover(function() {
                $(this).stop().animate({ boxShadow: '0 0 5px #494' }, 100);
            });
            $('.menuItem').mouseout(function() {
                $(this).stop().animate({ boxShadow: '0 0 5px #000' }, 1000);
            });
        });
    </script>
    @RenderSection("js", required: false)</html>